<% include ../partials/header %>
<div class="container">
    <div class="w-50 mx-auto">
      <form action="/blogs/<%=post._id %>?_method=PUT" method="POST">
        <div class="form-group">
          <label for="postTitle">Edit <%= post.title %></label>
          <input type="text" class="form-control" id="postTitle" value="<%= post.title; %>" name="post[title]">
        </div>
        <div class="form-group">
          <label for="postImage">Edit Image</label>
          <input type="text" class="form-control" id="postImage" value="<%= post.image%>" name="post[image]">
        </div>
        <div class="form-group">
          <label for="postDescription">Edit Description "html tags can be inserted" </label>
          <textarea rows="10" class="form-control" id="postDescription" name="post[description]"><%- post.description %> </textarea>
        </div>
        <button type="submit" class="btn btn-warning">Submit</button>
      </form>
    </div>
  </div>
<% include ../partials/footer %>